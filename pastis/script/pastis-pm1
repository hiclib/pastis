#! /usr/bin/env python

from pastis.algorithms import run_pm1


if __name__ == "__main__":
    import argparse
    parser = argparse.ArgumentParser(description='Run PM1.')
    parser.add_argument('directory', metavar='N', type=str,
                        help='directory')
    args = parser.parse_args()
    run_pm1(args.directory)
